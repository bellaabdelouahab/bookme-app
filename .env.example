# Environment Configuration
# Copy this file to .env and update with your values

# Django
DJANGO_SETTINGS_MODULE=bookme.settings.local
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database
DATABASE_URL=postgres://bookme:bookme@localhost:5432/bookme
DATABASE_ENGINE=django_tenants.postgresql_backend
DATABASE_MAX_CONNECTIONS=20

# Redis
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1

# Tenant Configuration
PUBLIC_SCHEMA_NAME=public
TENANT_MODEL=tenant.Tenant
TENANT_DOMAIN_MODEL=tenant.Domain
# Base domain used to form subdomains when creating tenants from admin/API
# For local dev you can keep 'localhost' to support subdomain.localhost via hosts file.
TENANT_BASE_DOMAIN=localhost
TENANT_AUTO_CREATE_PRIMARY_DOMAIN=True

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Security
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# AWS S3 (Optional)
USE_S3=False
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=eu-west-1

# Logging
LOG_LEVEL=INFO
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# External Services
WHATSAPP_API_KEY=
WHATSAPP_API_URL=https://api.whatsapp.com
SMS_PROVIDER=twilio
SMS_ACCOUNT_SID=
SMS_AUTH_TOKEN=
SMS_FROM_NUMBER=

# Payment Gateway
PAYMENT_PROVIDER=stripe
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Email
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=

# Monitoring
ENABLE_NEW_RELIC=False
NEW_RELIC_LICENSE_KEY=
NEW_RELIC_APP_NAME=bookme
